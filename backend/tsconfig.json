{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@auth/*": ["src/modules/auth/*"],
      "@supabase/*": ["src/common/supabase/*"],
      "@users/*": ["src/modules/users/*"],
      "@products/*": ["src/modules/products/*"],
      "@transactions/*": ["src/modules/transactions/*"],
      "@repair-shops/*": ["src/modules/repair-shops/*"],
      "@messaging/*": ["src/modules/messaging/*"],
    }
  }
}
