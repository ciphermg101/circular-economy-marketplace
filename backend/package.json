{
  "name": "circular-economy-marketplace-backend",
  "version": "0.1.0",
  "description": "Backend for the circular economy marketplace",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:generate": "NODE_OPTIONS=\"-r ts-node/register\" npm run typeorm -- migration:generate -d ./ormconfig.ts -n",
    "migration:run": "NODE_OPTIONS=\"-r ts-node/register\" npm run typeorm -- migration:run -d ./ormconfig.ts",
    "migration:revert": "NODE_OPTIONS=\"-r ts-node/register\" npm run typeorm -- migration:revert -d ./ormconfig.ts",
    "env:copy": "cp .env.example .env",
    "setup-mpesa-callback": "node scripts/setup-mpesa-callback.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.18",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.18",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.4.18",
    "@nestjs/platform-socket.io": "^10.4.18",
    "@nestjs/schedule": "^4.0.2",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^5.2.0",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/websockets": "^10.4.18",
    "@sentry/node": "^7.118.0",
    "@sentry/profiling-node": "^7.118.0",
    "@supabase/supabase-js": "^2.45.4",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.4.1",
    "joi": "^17.13.1",
    "mapbox-gl": "^2.15.0",
    "nestjs-pino": "^4.0.0",
    "node-pg-migrate": "^7.5.2",
    "opossum": "^8.5.0",
    "pg": "^8.12.0",
    "pino": "^8.21.0",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.1.2",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.1.14",
    "rimraf": "^5.0.7",
    "rotating-file-stream": "^3.2.6",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5",
    "typeorm": "^0.3.24",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.18",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.13",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.9",
    "@types/opossum": "^8.1.8",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
